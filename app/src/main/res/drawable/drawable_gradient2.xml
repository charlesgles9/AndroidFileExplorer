<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape>
            <gradient android:startColor="#315DCA"
                android:centerColor="#3AB5B5"
                android:angle="180"
                android:endColor="#18485E"/>
            <stroke android:width="1dp"
                android:color="@color/colorPrimary">
            </stroke>
            <solid android:color="#44D3B1"/>
        </shape>

    </item>
    <item android:gravity="bottom">
        <shape>
            <gradient android:startColor="#478DE3"
                android:centerColor="#B3499FE1"
                android:angle="90"
                android:endColor="@color/colorPrimary"/>
            <stroke android:width="1dp"
                android:color="@color/colorPrimary">
            </stroke>
        </shape>
    </item>
</layer-list>


