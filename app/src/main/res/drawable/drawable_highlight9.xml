<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>

            <gradient android:startColor="#65579FD8"
                android:endColor="#65579FD8"/>
            <stroke android:width="1dp"
                android:color="@color/lightGrey">
            </stroke>
        </shape>
    </item>
    <item>
        <shape>

            <solid android:color="?attr/background2"/>
            <stroke android:width="1dp"
                android:color="?attr/background1">
            </stroke>
        </shape>
    </item>
</selector>