<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="?attr/background1"
        android:padding="10dp">
        <RadioGroup
            android:visibility="visible"
            android:id="@+id/FILE_HANDLE_OPTIONS1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/open"
                android:layout_marginRight="20dp"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/drawable_highlight2"
                android:drawableLeft="@drawable/ic_open_as"
                android:gravity="top"
                android:textColor="?attr/normalTextColor"
                android:text=" Open"/>
                <RadioButton
                    android:id="@+id/share"
                    android:layout_marginRight="20dp"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:background="@drawable/drawable_highlight2"
                    android:drawableLeft="@drawable/ic_share"
                    android:checked="true"
                    android:gravity="top"
                    android:textColor="?attr/normalTextColor"
                    android:text=" Share"/>

                <RadioButton
                    android:id="@+id/openAs"
                    android:layout_marginRight="20dp"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:background="@drawable/drawable_highlight2"
                    android:drawableLeft="@drawable/ic_open_as"
                    android:gravity="top"
                    android:textColor="?attr/normalTextColor"
                    android:text=" Open As"/>


            <RadioButton
                    android:layout_marginRight="20dp"
                    android:id="@+id/compress"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:background="@drawable/drawable_highlight2"
                    android:drawableLeft="@drawable/ic_compress"
                    android:gravity="top"
                    android:textColor="?attr/normalTextColor"
                    android:text=" Compress"/>
            <RadioButton
                android:id="@+id/bookmark"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/drawable_highlight2"
                android:drawableLeft="@drawable/ic_bookmark"
                android:gravity="top"
                android:textColor="?attr/normalTextColor"
                android:text=" Add Bookmark"/>
                <RadioButton
                    android:id="@+id/properties"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:button="@null"
                    android:background="@drawable/drawable_highlight2"
                    android:drawableLeft="@drawable/ic_information_314866"
                    android:gravity="top"
                    android:textColor="?attr/normalTextColor"
                    android:text=" Properties"/>

        </RadioGroup>
    </androidx.cardview.widget.CardView>
</LinearLayout>