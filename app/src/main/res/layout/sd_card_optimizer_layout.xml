<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#B4040404"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_arrow_back2"
        app:subtitle="SD Optimizer"
        app:subtitleTextColor="#FFF"
        app:menu="@menu/sd_card_optimizer_toolbar"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>



<RelativeLayout
    android:background="@color/colorPrimary"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/value"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="#FFF"
        android:textSize="40dp"/>
    <TextView
        android:id="@+id/size"
        android:layout_toRightOf="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="GB"
        android:textSize="15dp"/>


</RelativeLayout>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"
        android:indeterminateTint="@color/colorPrimary"
        android:indeterminateTintMode="src_atop"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"></ProgressBar>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FA2F4D"
        android:padding="5dp"
        android:text="*Warning deleted items won't be recoverable*"
        android:textSize="10dp"/>
    <Button
        android:id="@+id/mountPoint"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:text="Mount Point"
        android:layout_alignParentEnd="true"
        android:background="@drawable/drawable_highlight7"
        android:textColor="#FFF"
        android:textSize="10dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/Clean"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:text="Clean(0.00GB)"
            android:background="@drawable/drawable_highlight6"
            android:layout_alignParentBottom="true"
            android:textColor="#FFF"
            android:textSize="25dp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_above="@+id/Clean"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioGroup

        android:id="@+id/FILE_HANDLE_OPTIONS1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/Package"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/toggle_btn3"
            android:background="#00FBFFFF"
            android:button="@null"
            android:checked="true"
            android:gravity="center_vertical"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:text="Installed Packages"/>

            <ProgressBar
                android:id="@+id/PackageProgress"
                style="?android:attr/indeterminateProgressStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:max="100"
                android:progress="80" />

            <TextView
                android:layout_toLeftOf="@+id/PackageProgress"
                android:id="@+id/TotalPackageSize"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_marginRight="30dp"
                android:text="0.0bytes"
                android:textSize="10dp"/>
            <ToggleButton
                android:id="@+id/PackageToggle"
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/toggle_btn2"
                android:checked="true"
                android:clickable="true"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/PackageList"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View style="@style/Divider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/LargeFiles"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:drawableLeft="@drawable/toggle_btn3"
        android:background="#00FBFFFF"
        android:checked="false"
        android:gravity="center_vertical"
        android:textColor="#FFF"
        android:textSize="12dp"
        android:text="Large Files"/>
            <ProgressBar
                android:id="@+id/LargeFilesProgress"
                style="?android:attr/indeterminateProgressStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:max="100"
                android:progress="80"
                android:clickable="false"/>
            <TextView
                android:layout_toLeftOf="@+id/LargeFilesProgress"
                android:id="@+id/TotalLargeFilesSize"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_marginRight="30dp"
                android:text="0.0bytes"
                android:textSize="10dp"/>
            <ToggleButton
                android:id="@+id/LargeFilesToggle"
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/toggle_btn2"
                android:checked="false"
                android:clickable="true"
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/LargeFilesList"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp"

            />
        <View style="@style/Divider"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/EmptyFiles"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableLeft="@drawable/toggle_btn3"
            android:background="#00FBFFFF"
            android:checked="true"
            android:gravity="center_vertical"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:text="Empty Files"/>
            <ProgressBar
                android:id="@+id/EmptyFilesProgress"
                style="?android:attr/indeterminateProgressStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:max="100"
                android:progress="80"
                android:clickable="false"/>
            <TextView
                android:layout_toLeftOf="@+id/EmptyFilesProgress"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:layout_marginRight="30dp"
                android:text="0.0bytes"
                android:textSize="10dp"/>
            <ToggleButton
                android:id="@+id/EmptyFilesToggle"
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/toggle_btn2"
                android:checked="false"
                android:clickable="true"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/EmptyFilesList"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
        <View style="@style/Divider"/>
    </LinearLayout>

    </RadioGroup>

    </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</LinearLayout>