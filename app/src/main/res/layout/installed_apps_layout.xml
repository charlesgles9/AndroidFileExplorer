<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:backgroundTint="?attr/background1"
    android:foreground="@drawable/drawable_highlight2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/thumbnail"
        android:src="@drawable/ic_android"
        android:layout_margin="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App name"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="?attr/normalTextColor"/>
        <TextView
            android:id="@+id/package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:text="Package name"
            android:textSize="10dp"
            android:textColor="?attr/normalTextColor"/>
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="version"
            android:layout_below="@id/package_name"
            android:maxWidth="150dp"
            android:maxLines="1"
            android:textSize="10dp"
            android:textColor="?attr/normalTextColor"/>
        <TextView
            android:id="@+id/package_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/version"
            android:text="0 MB"
            android:textSize="10dp"
            android:textColor="?attr/normalTextColor"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/version"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/package_size"
            android:text="last Modified"
            android:textSize="10dp"
            android:textColor="?attr/normalTextColor"/>

        <ImageView
            android:id="@+id/options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_more_white" />

        <View
            android:layout_below="@+id/date"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?attr/dividerColor"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>
</LinearLayout>