<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/background1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryLight"
        app:navigationIcon="@drawable/ic_arrow_back2"
        app:subtitle="Large Files"
        app:subtitleTextColor="#FFF"
        app:menu="@menu/large_files_finder_menu"
        app:popupTheme="@style/AppTheme.PopupOverlay">
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/loadingView"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:visibility="invisible"
        android:backgroundTint="?attr/background2"
        app:cardCornerRadius="10dp">
        <TableLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow >

                <TextView
                    android:padding="10dp"
                    android:id="@+id/loadingMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:text="..."
                    android:textColor="?attr/normalTextColor"/>
            </TableRow>
            <TableRow >
                <ProgressBar
                    android:id="@+id/loadingProgress"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:visibility="visible"
                    android:layout_span="1"
                    android:indeterminateOnly="true"
                    android:indeterminateBehavior="cycle"
                    android:indeterminateTintMode="src_atop"
                    android:scrollbarSize="10dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/divide"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?attr/dividerColor"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <Button
            android:id="@+id/refresh"
            android:layout_below="@+id/divide"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight2"/>
        <Button
            android:id="@+id/delete"
            android:layout_below="@+id/divide"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight2"/>
        <Button
            android:id="@+id/selectAll"
            android:layout_below="@+id/divide"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight2"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fileList"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottomNav"
        android:layout_marginRight="5dp"
        android:saveEnabled="true"
        style="@style/scrollbar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>