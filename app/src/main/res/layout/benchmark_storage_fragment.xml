<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/background1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryLight"
            app:navigationIcon="@drawable/ic_arrow_back2"
            app:subtitle="Storage Benchmark"
            app:subtitleTextColor="#FFF"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    <RelativeLayout
        android:orientation="vertical"
        android:background="?attr/colorPrimaryLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/usedRamInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#F3BC6B"
            android:textStyle="bold"
            android:text="Used Ram:"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/usedRamInfo"
            android:layout_toRightOf="@+id/usedRamInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text=""
            android:textSize="10dp" />
        <TextView
            android:id="@+id/availableRamInfoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#9BDA54"
            android:textStyle="bold"
            android:text="Available Ram:"
            android:textSize="10dp"
            android:layout_toRightOf="@id/usedRamInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/availableRamInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text=""
            android:textSize="10dp"
            android:layout_toRightOf="@id/availableRamInfoLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="0 Mbp/s"
            android:textSize="10dp"
            android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"
            android:text="speed:"
            android:textSize="10dp"
            android:layout_toLeftOf="@id/speed"
            android:layout_marginBottom="5dp" />
        <TextView
            android:id="@+id/bytesCopied"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="italic|bold"
            android:text="0/0Mb"
            android:textSize="10dp"
            android:padding="5dp"
            android:layout_marginBottom="17dp"
            android:layout_alignParentBottom="true" />
        <LinearLayout
            android:layout_below="@+id/availableRamInfo"
            android:id="@+id/cpuStats"
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:text="CPU LOAD:"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/cpuLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph"
                android:background="@color/transparent"
                android:layout_width="match_parent"

                android:layout_height="200dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cpuInfo"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:saveEnabled="true"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/elapsed"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="italic|bold"
            android:text=""
            android:textSize="11dp"
            android:padding="5dp"
            android:layout_below="@+id/cpuStats"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_below="@+id/cpuStats"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_drawable_bechmark"
            android:clickable="false"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:text="Configurations"
        android:textSize="12dp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true" />
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mount point:"
                android:gravity="left"
                android:layout_gravity="center"
                android:textColor="?attr/normalTextColor"
                android:textSize="12dp" />
            <Spinner
                android:id="@+id/mountPoint"
                android:layout_gravity="center"
                android:background="@drawable/spinner_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?attr/dividerColor"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Buffer size:"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="?attr/normalTextColor"
            android:textSize="12dp" />
        <Spinner
            android:id="@+id/buffer"
            android:layout_gravity="center"
            android:background="@drawable/spinner_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="?attr/dividerColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Byte size:"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="?attr/normalTextColor"
            android:textSize="12dp" />
        <Spinner
            android:id="@+id/byteSize"
            android:layout_gravity="center"
            android:background="@drawable/spinner_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="?attr/dividerColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Thread count:"
            android:gravity="left"
            android:layout_gravity="center"
            android:textColor="?attr/normalTextColor"
            android:textSize="12dp" />
        <Spinner
            android:id="@+id/threadCount"
            android:layout_gravity="center"
            android:background="@drawable/spinner_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="?attr/dividerColor"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:text="Statistics"
        android:textSize="12dp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/threadList"
        android:layout_below="@+id/layout1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:saveEnabled="true"
        style="@style/scrollbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/start_benchmark"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Benchmark"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:textColor="?attr/normalTextColor"
        android:background="@drawable/drawable_highlight6"/>
</RelativeLayout>