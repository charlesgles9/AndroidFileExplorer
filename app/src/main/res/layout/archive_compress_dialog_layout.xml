<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/drawable_highlight7"
    android:foreground="@drawable/drawable_highlight7"
    android:backgroundTint="?attr/background1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="?attr/normalTextColor"
        android:text="Compress"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="?attr/normalTextColor"
        android:text="name"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:backgroundTint="?attr/iconColor1"
        android:textColor="@color/colorPrimaryLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="?attr/normalTextColor"
            android:text=".zip"/>
    </RelativeLayout>
    <TextView
        android:layout_marginStart="5dp"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="?attr/normalTextColor"
        android:text="Compression Level:"/>
    <Spinner
        android:id="@+id/level"
        android:layout_marginTop="5dp"
        android:foreground="@drawable/drawable_highlight7"
        android:background="@drawable/spinner_background"
        android:theme="@style/SpinnerScrollbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="5dp"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="?attr/normalTextColor"
        android:text="Compression Method:"/>
    <Spinner
        android:id="@+id/method"
        android:layout_marginTop="5dp"
        android:foreground="@drawable/drawable_highlight7"
        android:background="@drawable/spinner_background"
        android:theme="@style/SpinnerScrollbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/extractTo"
            android:layout_margin="5dp"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="Choose Directory: "
            android:textColor="?attr/normalTextColor"
            android:textSize="10dp"
            android:background="@drawable/drawable_highlight9"/>
        <TextView
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/storage/emulated/0"
            android:textColor="@color/colorPrimaryLight"
            android:maxLines="2"
            android:textSize="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_marginStart="5dp"
        android:textSize="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="?attr/normalTextColor"
        android:text="Password"/>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="( this field is optional for password protect)"
            android:textColor="#F34B4B"
            android:maxLines="2"
            android:textSize="10dp" />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:backgroundTint="?attr/iconColor1"
        android:textColor="@color/colorPrimaryLight"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ToggleButton
        android:id="@+id/showPassword"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/toggle_btn2"
        android:checked="false"
        android:clickable="true"
        android:textOff=""
        android:textOn="" />
    <TextView
        android:layout_marginStart="5dp"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="?attr/normalTextColor"
        android:text="Show Password"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
        <Button
            android:id="@+id/okay"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Okay"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>