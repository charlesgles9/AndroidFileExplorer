<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background1"
    tools:context=".ui.home.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

           <TableLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:stretchColumns="*">
           <TableRow>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:backgroundTint="?attr/background2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/storageDetails1"
            android:background="@drawable/drawable_highlight10"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/titleInternal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/internalIcon1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="5dp"
                android:src="@drawable/ic_sd_storage"/>
                <TextView
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:textSize="10dp"
                    android:textColor="?attr/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="InternalSD"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/titleInternal"
                android:id="@+id/progressLayoutInternal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/InternalSdProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/circular_shape"
                    android:clickable="false"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progress_bar" />

                <TextView
                android:id="@+id/InternalPercentage"
                android:layout_centerInParent="true"
                android:layout_alignBaseline="@+id/InternalSdProgress"
                android:textSize="10dp"
                android:textColor="?attr/normalTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingRight="50dp"
                android:layout_below="@+id/titleInternal"
                android:layout_toRightOf="@id/progressLayoutInternal"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/usedInternal"
                    android:padding="1dp"
                    android:layout_margin="2dp"
                    android:layout_centerInParent="true"
                    android:layout_alignBaseline="@+id/InternalSdProgress"
                    android:textSize="10dp"
                    android:textColor="?attr/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Used:"/>
                <TextView
                    android:id="@+id/availInternal"
                    android:padding="1dp"
                    android:layout_margin="2dp"
                    android:layout_centerInParent="true"
                    android:layout_alignBaseline="@+id/InternalSdProgress"
                    android:textSize="10dp"
                    android:textColor="?attr/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avail:"/>
                <TextView
                    android:id="@+id/totalInternal"
                    android:padding="1dp"
                    android:layout_margin="2dp"
                    android:layout_centerInParent="true"
                    android:layout_alignBaseline="@+id/InternalSdProgress"
                    android:textSize="10dp"
                    android:textColor="?attr/normalTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total:"/>
            </LinearLayout>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_toRightOf="@+id/internalCardView"
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:backgroundTint="?attr/background2"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:id="@+id/storageDetails2"
                android:background="@drawable/drawable_highlight10"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/titleExternal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ExternalIcon1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="5dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_sd_storage"/>
                    <TextView
                        android:padding="1dp"
                        android:layout_margin="1dp"
                        android:textSize="10dp"
                        android:textColor="?attr/normalTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ExternalSd"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/titleExternal"
                    android:id="@+id/progressLayoutExternal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ProgressBar
                        android:id="@+id/ExternalSdProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/circular_shape"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/circular_progress_bar" />

                    <TextView
                        android:id="@+id/ExternalPercentage"
                        android:layout_centerInParent="true"
                        android:layout_alignBaseline="@+id/ExternalSdProgress"
                        android:textSize="10dp"
                        android:textColor="?attr/normalTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingRight="50dp"
                    android:layout_below="@+id/titleExternal"
                    android:layout_toRightOf="@id/progressLayoutExternal"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/usedExternal"
                        android:padding="1dp"
                        android:layout_margin="2dp"
                        android:layout_centerInParent="true"
                        android:layout_alignBaseline="@+id/InternalSdProgress"
                        android:textSize="10dp"
                        android:textColor="?attr/normalTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Used:"/>
                    <TextView
                        android:id="@+id/availExternal"
                        android:padding="1dp"
                        android:layout_margin="2dp"
                        android:layout_centerInParent="true"
                        android:layout_alignBaseline="@+id/InternalSdProgress"
                        android:textSize="10dp"
                        android:textColor="?attr/normalTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avail:"/>
                    <TextView
                        android:id="@+id/totalExternal"
                        android:padding="1dp"
                        android:layout_margin="2dp"
                        android:layout_centerInParent="true"
                        android:layout_alignBaseline="@+id/InternalSdProgress"
                        android:textSize="10dp"
                        android:textColor="?attr/normalTextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="total:"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
           </TableRow>
           </TableLayout>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/searchLayout"
            android:clickable="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="5dp"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/thumbnail"
                   android:src="@drawable/ic_search"
                   android:layout_marginLeft="1dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textSize="12dp"
                   android:layout_marginLeft="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="bottom"
                   android:textColor="?attr/iconColor1"
                   android:layout_gravity="center_vertical"
                   android:text="Search"/>
           </LinearLayout>
            <View
                android:background="?attr/dividerColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
    </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/background1"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_margin="10dp"
            android:background="?attr/background2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/calculationText"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/normalTextColor"
                android:visibility="invisible"
                android:text="Calculating..."/>
        <TableLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shrinkColumns="1"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/movie_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movie_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:padding="5dp"
                android:background="@drawable/blue_rounded_drawable"
                android:src="@drawable/ic_video_rounded_icon"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/normalTextColor"
                android:text="Videos"/>

            <ProgressBar
                android:id="@+id/videoProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="0dp"
                android:clickable="false"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progress_drawable_home" />

        </LinearLayout>
            <LinearLayout
                android:id="@+id/music_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/music_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:background="@drawable/red_rounded_drawable"
                android:src="@drawable/ic_audio_icon_home"/>

                <TextView
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/normalTextColor"
                    android:text="Audio"/>
                <ProgressBar
                    android:id="@+id/audioProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="1dp"
                    android:clickable="false"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_drawable_home" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/android_layout"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/androidIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:minHeight="50dp"
                    android:minWidth="50dp"
                    android:padding="5dp"
                    android:background="@drawable/green_rounded_drawable"
                    android:src="@drawable/ic_app_icon_home"/>
            <TextView
                android:textSize="11dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/normalTextColor"
                android:text="App"/>
                <ProgressBar
                    android:id="@+id/appProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="1dp"
                    android:clickable="false"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_drawable_home" />
        </LinearLayout>
            </TableRow>


            <TableRow
                android:id="@+id/secondRow"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/photo_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:minHeight="50dp"
                        android:minWidth="50dp"
                        android:background="@drawable/brown_rounded_drawable"
                        android:src="@drawable/ic_image_icon_home"/>
                    <TextView
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/normalTextColor"
                        android:text="Photos"/>
                    <ProgressBar
                        android:id="@+id/photoProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="1dp"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_drawable_home" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/document_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:minWidth="50dp"
                        android:padding="5dp"
                        android:background="@drawable/light_cyan_rounded_drawable"
                        android:src="@drawable/ic_document_icon_home"/>

                    <TextView
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/normalTextColor"
                        android:text="Documents"/>
                    <ProgressBar
                        android:id="@+id/docProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="1dp"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_drawable_home" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/compressed_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="50dp"
                        android:minWidth="50dp"
                        android:padding="5dp"
                        android:background="@drawable/dark_brown_rounded_drawable"
                        android:src="@drawable/ic_zip_icon_home"/>

                    <TextView
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/normalTextColor"
                        android:text="Archive"/>
                    <ProgressBar
                        android:id="@+id/archiveProgress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="1dp"
                        android:clickable="false"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_drawable_home" />

                </LinearLayout>
            </TableRow>
        </TableLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/bookMarkToggleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Bookmarks"
                android:textColor="?attr/normalTextColor"/>

            <ToggleButton
                android:id="@+id/bookToggleBtn"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/toggle_btn3"
                android:textOff=""
                android:textOn=""/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/bookMarkLayout"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?attr/background2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bookMarkList"
                android:layout_marginRight="5dp"
                android:saveEnabled="true"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Recent Documents"
                android:textColor="?attr/normalTextColor"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/showRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:button="@drawable/toggle_btn4"
                android:checked="false"
                android:clickable="true"
                android:gravity="center"
                android:text=""
                android:textSize="0dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fileList"
            android:layout_above="@+id/nav_wrapper"
            android:layout_marginRight="5dp"
            android:saveEnabled="true"
            android:nestedScrollingEnabled="true"
            style="@style/scrollbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="10dp"
                android:indeterminateOnly="true"
                android:indeterminateTint="?attr/colorProgress"
                android:indeterminateTintMode="src_atop"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            <TextView
                android:layout_below="@+id/progress"
                android:id="@+id/status"
                android:layout_margin="1dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/normalTextColor"
                android:text="Loading..."
                android:textSize="10dp"/>
        </RelativeLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
