<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background1"
    tools:context=".ui.home.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:id="@+id/storageDetails1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp"
    android:backgroundTint="?attr/background2"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_sd_storage"/>
        <TextView
            android:id="@+id/text_internal_title"
            android:layout_toRightOf="@+id/icon1"
            android:textSize="10dp"
            android:textColor="?attr/normalTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internal Storage"/>
        <TextView
            android:id="@+id/text_internal_used"
            android:layout_toRightOf="@+id/text_internal_title"
            android:layout_marginLeft="50dp"
            android:textSize="10dp"
            android:textColor="?attr/normalTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0GB"/>
        <TextView
            android:id="@+id/Iseparator"
            android:layout_toRightOf="@+id/text_internal_used"
            android:layout_marginLeft="1dp"
            android:textSize="10dp"
            android:textColor="?attr/normalTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"/>
        <TextView
            android:id="@+id/text_internal_total"
            android:layout_toRightOf="@+id/Iseparator"
            android:textSize="10dp"
            android:textColor="?attr/normalTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0GB"/>
    <ProgressBar
        android:id="@+id/Internal_progress"
        android:layout_toRightOf="@+id/icon1"
        android:layout_below="@+id/text_internal_title"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:progressDrawable="@drawable/progress_drawable"
        android:clickable="false"
        android:max="100"
        android:progress="0"/>
        <TextView
            android:id="@+id/text_internal_free"
            android:layout_toRightOf="@+id/icon1"
            android:layout_below="@+id/Internal_progress"
            android:textSize="10dp"
            android:textColor="?attr/normalTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available: 0 GB"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/storageDetails2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:backgroundTint="?attr/background2"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_sd_storage"/>
    <TextView
        android:id="@+id/text_external_title"
        android:layout_toRightOf="@+id/icon2"
        android:textSize="10dp"
        android:textColor="?attr/normalTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="External Storage"/>

    <TextView
        android:id="@+id/text_external_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/text_external_title"
        android:text="0.0GB"
        android:textColor="?attr/normalTextColor"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/Eseparator"
        android:layout_toRightOf="@+id/text_external_used"
        android:layout_marginLeft="1dp"
        android:textSize="10dp"
        android:textColor="?attr/normalTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"/>
    <TextView
        android:id="@+id/text_external_total"
        android:layout_toRightOf="@+id/Eseparator"
        android:textSize="10dp"
        android:textColor="?attr/normalTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0GB"/>
        <ProgressBar
            android:id="@+id/External_progress"
            android:layout_below="@+id/text_external_title"
            android:layout_toRightOf="@+id/icon2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_drawable"
            android:layout_gravity="center"
            android:clickable="false"/>
    <TextView
        android:id="@+id/text_external_free"
        android:layout_toRightOf="@+id/icon2"
        android:layout_below="@+id/External_progress"
        android:textSize="10dp"
        android:textColor="?attr/normalTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available: 0 GB"/>
</RelativeLayout>
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/searchLayout"
            android:clickable="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="5dp"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/thumbnail"
                   android:src="@drawable/ic_search"
                   android:layout_marginLeft="1dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:textSize="12dp"
                   android:layout_marginLeft="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="bottom"
                   android:textColor="?attr/iconColor1"
                   android:layout_gravity="center_vertical"
                   android:text="Search"/>
           </LinearLayout>
            <View
                android:background="?attr/dividerColor"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
    </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/background1"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_margin="10dp"
            android:background="?attr/background2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentLeft="true"
            android:id="@+id/movie_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movie_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:background="@drawable/blue_rounded_drawable"
                android:src="@drawable/ic_video_rounded_icon"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/normalTextColor"
                android:text="Videos"/>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/music_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/music_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:background="@drawable/red_rounded_drawable"
                android:src="@drawable/ic_audio_icon_home"/>

                <TextView
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/normalTextColor"
                    android:text="Audio"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/android_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:background="@drawable/green_rounded_drawable"
                    android:src="@drawable/ic_app_icon_home"/>
            <TextView
                android:layout_gravity="center"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/normalTextColor"
                android:text="App"/>
        </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:id="@+id/photo_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:background="@drawable/brown_rounded_drawable"
                        android:src="@drawable/ic_image_icon_home"/>
                    <TextView
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/normalTextColor"
                        android:text="Photos"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/document_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:background="@drawable/light_cyan_rounded_drawable"
                        android:src="@drawable/ic_document_icon_home"/>

                    <TextView
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/normalTextColor"
                        android:text="Documents"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/compressed_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:background="@drawable/dark_brown_rounded_drawable"
                        android:src="@drawable/ic_zip_icon_home"/>

                    <TextView
                        android:layout_gravity="center"
                        android:textSize="11dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/normalTextColor"
                        android:text="Archive"/>
                </LinearLayout>
            </RelativeLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/bookMarkToggleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Bookmarks"
                android:textColor="?attr/normalTextColor"/>

            <ToggleButton
                android:id="@+id/bookToggleBtn"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/toggle_btn3"
                android:textOff=""
                android:textOn=""/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/bookMarkLayout"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="?attr/background2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bookMarkList"
                android:layout_marginRight="5dp"
                android:saveEnabled="true"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="Recent Documents"
                android:textColor="?attr/normalTextColor"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/showRecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:button="@drawable/toggle_btn4"
                android:checked="false"
                android:clickable="true"
                android:gravity="center"
                android:text=""
                android:textSize="0dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fileList"
            android:layout_above="@+id/nav_wrapper"
            android:layout_marginRight="5dp"
            android:saveEnabled="true"
            android:nestedScrollingEnabled="true"
            style="@style/scrollbar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="10dp"
                android:indeterminateOnly="true"
                android:indeterminateTint="?attr/colorProgress"
                android:indeterminateTintMode="src_atop"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            <TextView
                android:layout_below="@+id/progress"
                android:id="@+id/status"
                android:layout_margin="1dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/normalTextColor"
                android:text="Loading..."
                android:textSize="10dp"/>
        </RelativeLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
