<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:backgroundTint="?attr/background2"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">
    <RadioGroup
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/normalTextColor"
            android:textSize="11dp"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Filter file list"/>
        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:button="@drawable/drawable_highlight2"
            android:drawableEnd="@drawable/toggle_btn2"
            android:text=" Images only"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
        <RadioButton
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:button="@drawable/drawable_highlight2"
            android:drawableEnd="@drawable/toggle_btn2"
            android:text=" Videos only"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
        <RadioButton
            android:id="@+id/option8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:button="@drawable/drawable_highlight2"
            android:drawableEnd="@drawable/toggle_btn2"
            android:text="Audio(.ogg,.mp3)"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:button="@drawable/drawable_highlight2"
            android:drawableEnd="@drawable/toggle_btn2"
            android:text=" Images and Videos"
            android:checked="true"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
        <RadioButton
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:button="@drawable/drawable_highlight2"
            android:drawableEnd="@drawable/toggle_btn2"
            android:text="Documents"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
        <RadioButton
            android:id="@+id/option5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:button="@drawable/drawable_highlight2"
            android:drawableEnd="@drawable/toggle_btn2"
            android:text="Compressed(.zip)"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/normalTextColor"
            android:textSize="11dp"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Storage Space"/>
        <RadioGroup
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/option6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:button="@drawable/drawable_highlight2"
            android:drawableEnd="@drawable/toggle_btn2"
            android:text="Internal"
            android:checked="true"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
        <RadioButton
            android:id="@+id/option7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="2dp"
            android:button="@drawable/drawable_highlight2"
            android:drawableEnd="@drawable/toggle_btn2"
            android:text="External"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight9"/>
        </RadioGroup>
        <Button
            android:id="@+id/search"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="?attr/normalTextColor"
            android:background="@drawable/drawable_highlight7"/>
    </RadioGroup>
    </androidx.cardview.widget.CardView>
</LinearLayout>