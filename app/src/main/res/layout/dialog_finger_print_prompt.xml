<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/drawable_highlight7"
    android:foreground="@drawable/drawable_highlight7"
    android:backgroundTint="?attr/background1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="FingerPrint Authentication"
        android:textColor="?attr/normalTextColor"/>
    <TextView
        android:id="@+id/message"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Use device pattern to continue"
        android:textColor="?attr/normalTextColor"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_finger_print_icon"
        android:layout_below="@id/message"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Touch the fingerPrint sensor"
        android:textColor="?attr/lightGrey"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>