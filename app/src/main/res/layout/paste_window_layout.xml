<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/search_text"
        android:hint="Search Keyword"
        android:textSize="12dp"
        android:drawableLeft="@drawable/ic_search"
        android:textColorHint="@color/lightGrey"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/current_path"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"
            android:text="NULL"/>

        <ImageView
            android:id="@+id/STORAGE_OPTIONS"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_smartphone"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pathList"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/STORAGE_OPTIONS"
            android:layout_marginBottom="1dp"/>

    </LinearLayout>
<LinearLayout
    android:id="@+id/back"
    android:layout_below="@id/layout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:src="@drawable/ic_folder"
        android:layout_marginLeft="5dp"
        android:layout_width="70px"
        android:layout_height="70px"/>
    <ImageView
        android:src="@drawable/ic_return_24"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_width="30px"
        android:layout_height="30px"/>
</LinearLayout>
    <RelativeLayout
        android:id="@+id/nav_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/wpaste"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paste"
                android:background="@drawable/drawable_highlight2"/>
            <Button
                android:id="@+id/wcancel"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:background="@drawable/drawable_highlight2"/>
        </RelativeLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fileList"
        android:layout_above="@+id/nav_wrapper"
        android:layout_below="@+id/back"
        android:saveEnabled="true"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>