<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?attr/background1"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryLight"
        app:navigationIcon="@drawable/ic_arrow_back2"
        app:subtitle="Installed Apps"
        app:subtitleTextColor="#FFF"
        app:menu="@menu/installed_apps_menu"
        app:popupTheme="@style/AppTheme.PopupOverlay">
    </androidx.appcompat.widget.Toolbar>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:layout_centerInParent="true"
        android:indeterminateOnly="true"
        android:indeterminateTint="?attr/colorProgress"
        android:indeterminateTintMode="src_atop"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_centerInParent="true"
        android:textSize="12dp"
        android:text="Message"
        android:textColor="?attr/normalTextColor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fileList"
        android:layout_below="@+id/toolbar"
        android:layout_marginRight="5dp"
        android:saveEnabled="true"
        style="@style/scrollbar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>