<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <LinearLayout
            android:background="@color/lightGrey"
            android:paddingLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/internal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_sd_storage"/>
                <TextView
                    android:id="@+id/Storage_label2"
                    android:layout_toRightOf="@+id/icon2"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="Internal"/>
                <TextView
                    android:id="@+id/internal_path"
                    android:layout_below="@+id/Storage_label2"
                    android:layout_toRightOf="@+id/icon2"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:text="null"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/external"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_sd_storage"/>
                <TextView
                    android:id="@+id/Storage_label1"
                    android:layout_toRightOf="@+id/icon1"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="SD card"/>
                <TextView
                    android:id="@+id/external_path"
                    android:layout_below="@+id/Storage_label1"
                    android:layout_toRightOf="@+id/icon1"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:text="null"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>